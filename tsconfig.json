{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "module": "es6",
    "moduleResolution": "node",
    "target": "es6",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "paths": {
      "@components/*": ["src/components/*"],
      "@store/*": ["src/store/*"],
      "@services/*": ["src/services/*"],
      "@modals/*": ["src/modals/*"],
      "@story/*": ["src/storybook/*"],
      "@utils/*": ["src/utils/*"],
      "@config": ["src/config/"],
    }
  }
}
